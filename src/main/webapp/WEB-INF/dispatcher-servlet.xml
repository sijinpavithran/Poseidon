<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>


	<bean name="handlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
    </bean>

    <bean name="/user/*.htm" class="com.poseidon.user.web.controller.UserController" >
        <property name="userService" ref="userService"/>
    </bean>

    <bean name="/txs/*.htm" class="com.poseidon.transaction.web.controller.TransactionController" >
        <property name="transactionService" ref="transactionService"/>
        <property name="makeService" ref="makeService"/>
        <property name="customerService" ref="customerService"/>
    </bean>

    <bean name="/make/*.htm" class="com.poseidon.make.web.controller.MakeController" >
        <property name="makeService" ref="makeService"/>
    </bean>

    <bean name="/customer/*.htm" class="com.poseidon.customer.web.controller.CustomerController" >
        <property name="customerService" ref="customerService"/>
    </bean>

    <bean name="/company/*.htm" class="com.poseidon.company.web.controller.CompanyTermsController" >
        <property name="companyTermsService" ref="companyService"/>
    </bean>

    <bean name="/reports/*.htm" class="com.poseidon.reports.web.controller.ReportsController" >
        <property name="reportsService" ref="reportsService"/>
    </bean>

    <bean name="/invoice/*.htm" class="com.poseidon.invoice.web.controller.InvoiceController" >
        <property name="invoiceService" ref="invoiceService"/>
        <property name="makeService" ref="makeService"/>
        <property name="transactionService" ref="transactionService"/>
    </bean>

    <!-- View Resolution -->
    <bean id="beanNameViewResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver">
        <property name="order" value="0"/>
    </bean>

    <bean id="messageSource"
          class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="classpath:resources/poseidon" />
        <property name="useCodeAsDefaultMessage" value="true" />
    </bean>
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
        <property name="defaultLocale" value="en_US"/>
    </bean>

    <bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>
